<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="12"

    tools:context="com.example.pazlle15.views.MainActivity">

    <LinearLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    <LinearLayout
        android:background="@color/colorBack"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView

            android:textColor="#fff"
            android:textSize="18sp"
             android:text="Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/score"
            android:textColor="#FFF"
            android:textSize="24sp"
            tools:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
        <Space
            android:layout_width="1dp"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@color/colorBack"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:textColor="#fff"
            android:textSize="18sp"
             android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Chronometer
            android:id="@+id/time"
            android:textColor="#FFF"
            android:textSize="24sp"
            android:text="20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt1"
                android:text="1"
                style="@style/bt_stile" />
            <Button
            android:id="@+id/bt2"
            style="@style/bt_stile"
            android:layout_toRightOf="@id/bt1"
            android:text="1" />
            <Button
            android:id="@+id/bt3"
            style="@style/bt_stile"
            android:layout_toRightOf="@id/bt2"
            android:text="1" />
            <Button
                android:id="@+id/bt4"
                style="@style/bt_stile"
                android:layout_toRightOf="@id/bt3"
                android:text="1" />
            <Button
                android:id="@+id/bt5"
                style="@style/bt_stile"
                android:layout_below="@id/bt1"
                android:text="1" />
            <Button
                android:id="@+id/bt6"
                style="@style/bt_stile"
                android:layout_below="@id/bt1"
                android:layout_toRightOf="@id/bt5"
                android:text="1" />
            <Button
                android:id="@+id/bt7"
                style="@style/bt_stile"
                android:layout_below="@id/bt1"
                android:layout_toRightOf="@id/bt6"
                android:text="1" />
            <Button
                android:id="@+id/bt8"
                style="@style/bt_stile"
                android:layout_below="@id/bt1"
                android:layout_toRightOf="@id/bt7"
                android:text="1" />
            <Button
                android:id="@+id/bt9"
                style="@style/bt_stile"
                android:layout_below="@id/bt5"
                android:text="1" />
            <Button
                android:id="@+id/bt10"
                style="@style/bt_stile"
                android:layout_below="@id/bt5"
                android:layout_toRightOf="@id/bt9"
                android:text="1" />
            <Button
            android:id="@+id/bt11"
            style="@style/bt_stile"
            android:layout_below="@id/bt5"
            android:layout_toRightOf="@id/bt10"
            android:text="1" />
            <Button
            android:id="@+id/bt12"
            style="@style/bt_stile"
            android:layout_below="@id/bt5"
            android:layout_toRightOf="@id/bt11"
            android:text="1" />
            <Button
                android:id="@+id/bt13"
                style="@style/bt_stile"
                android:layout_below="@id/bt9"
                android:text="1" />
            <Button
                android:id="@+id/bt14"
                style="@style/bt_stile"
                android:layout_below="@id/bt9"
                android:layout_toRightOf="@id/bt13"
                android:text="1" />
            <Button
                android:id="@+id/bt15"
                style="@style/bt_stile"
                android:layout_below="@id/bt9"
                android:layout_toRightOf="@id/bt14"
                android:text="1" />
            <Button
                android:background="#00FFFFFF"
                android:id="@+id/bt16"
                style="@style/bt_stile"
                android:layout_below="@id/bt9"
                android:layout_toRightOf="@id/bt15" />

        </RelativeLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_press"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <Space
        android:layout_width="1dp"
        android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/restart"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:text="Restart"
            android:background="@drawable/bt_press"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>




    </LinearLayout>


</LinearLayout>